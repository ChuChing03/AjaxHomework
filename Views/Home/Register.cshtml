    <script>
        const divResult = document.querySelector('#div1');
        const btnSubmit = document.querySelector('#buttonSubmit');
        const inpName = document.querySelector('#InputName');
        const inpEmail = document.querySelector('#InputEmail');
        const inpAge = document.querySelector('#InputAge');



        btnSubmit.addEventListener('click', async (evt) => {
            evt.preventDefault(); //防止預設行為的發生

            //將資料放進FormData
            const myForm = document.querySelector('#userForm');
            const formData = new FormData(myForm);

            //formData.append("password", "12345678");
            //讀出formData中的資料
            //for(const pair of formData.entries()){
            //    console.log(`${pair[0]}:${pair[1]}`);
            //}

            // 這裡宣告了一個變數 url，用來存儲 API 的路徑
            const url = '@Url.Content("~/api/register/")';

            // 使用 fetch 函數發送一個 POST 請求到指定的 API 位址
            const response = await fetch(url, {
                // 指定請求的 HTTP 方法為 POST 
                // GET：通過 URL 的 query string 傳遞數據。數據以鍵值對的形式附加到 URL 的末尾，例如 ?name=John&age=30。
                //POST：通過請求主體（request body）傳遞數據。數據被包含在請求的主體中，並且通常以表單數據（Form Data）的形式進行傳遞。
                method: 'POST',

                // 將表單數據作為請求主體傳遞給伺服器
                // formData 是一個包含了表單數據的 FormData 物件
                body: formData
            });


            const data = await response.text();
            divResult.textContent = data;


